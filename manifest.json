{
  "manifest_version": 3,
  "name": "AnimePahe Helper",
  "version": "1.6",
  "description": "Enhances the AnimePahe website with additional features.",
  "icons": {
    "48": "icons/animepahe-helper-48.png"
  },
  "permissions": ["storage", "scripting", "activeTab", "downloads"],
  "host_permissions": ["*://animepahe.si/*", "*://*.animepahe.si/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://www.gstatic.com; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": ["*://animepahe.si/*", "*://*.animepahe.si/*"],
      "js": [
        "src/content/storage.js",
        "src/lib/utils.js",
        "src/content/inject.js"
      ],
      "css": ["src/content/styles.css"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "animepahe@helper",
      "data_collection_permissions": {
        "required": ["browsingActivity", "websiteContent", "websiteActivity"]
      }
    }
  }
}
